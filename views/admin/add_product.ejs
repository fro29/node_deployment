<%- include('../_layouts/adminheader') %>

<h2 class="page-title card-header-second">Agregar producto</h2>
<a href="/admin/products" class="btn btn-bd1-primary">Regresar a todos los productos</a>
<br><br>

<form method="post" action="/admin/products/add-product" enctype="multipart/form-data">
  
    <div class="form-group">
      <label for="">Título</label>
      <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Título">
    </div>

    <div class="form-group">
      <label for="">Descripción</label>
      <textarea name="desc" class="form-control" cols="30" rows="10" placeholder="Descripción"><%= desc %></textarea>
  </div>

  <div class="form-group">
    <label for="">Categoría</label>
    <select name="category" class="form-control">
      <% categories.forEach(function(cat){ %>
        <option value="<%= cat.slug %>"><%= cat.title %></option>
      <% }); %>  
    </select>
   </div>

  <div class="form-group">
    <label for="">Precio</label>
    <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Precio">
</div>

<div class="form-group">
  <label for="">Imagen</label>
  <input type="file" class="form-control" name="image" id="img">
  <img src="#" id="imgPreview" alt="">
</div>

<button class="btn btn-bd2-primary">Subir</button>
</form>

<script>
  function readURL(input){
    if (input.files && input.files[0]) {  
      var reader = new FileReader();

      reader.onload = function(e){
        $("#imgPreview").attr('src', e.target.result).width(100).height(100);
      }
      reader.readAsDataURL(input.files[0]);
    }
  }
  $("#img").change(function() { 
    readURL(this);
  });

</script>

<%- include ('../_layouts/adminfooter') %>